FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    movingWall
    {
        type            movingWallVelocity;
        value           $internalField;
    }

    movingLowerWall
    {
        type            movingWallVelocity;
        value           $internalField;
    }

    rightWall
    {
        type            noSlip;
    }

    leftWall
    {
        type            noSlip;
    }

    topField
    {
        type            pressureInletOutletVelocity;
        value           uniform (0 0 0);
    }

    bottomWallLeft
    {
        type            noSlip;
    }

    bottomWallRight
    {
        type            noSlip;
    }

    back
    {
        type            empty;
    }

    front
    {
        type            empty;
    }
}


// ************************************************************************* //
