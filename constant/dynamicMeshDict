FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      dynamicMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
// dynamicFvMesh   staticFvMesh;
dynamicFvMesh   dynamicMotionSolverFvMesh;

motionSolverLibs ("libsixDoFRigidBodyMotion.so");

solver        sixDoFRigidBodyMotion;

sixDoFRigidBodyMotionCoeffs
{
    patches         (movingWall);
    innerDistance   .0;
    outerDistance   .4;

    centreOfMass    (0 0.2 0.5);
    // centreOfMass    (0 0 0);

    // Cuboid dimensions
    Lx              0.35;
    Ly              0.07;
    Lz              0.005;

    // Density of the solid
    rhoSolid        1000;

    // Cuboid mass
    mass            #calc "$rhoSolid*$Lx*$Ly*$Lz";
    // velocity        (0.1 0 0 );
    // Cuboid moment of inertia about the centre of mass
    momentOfInertia #codeStream
    {
        codeInclude
        #{
            #include "diagTensor.H"
        #};

        code
        #{
            scalar sqrLx = sqr($Lx);
            scalar sqrLy = sqr($Ly);
            scalar sqrLz = sqr($Lz);
            os  <<
                $mass
               *diagTensor(sqrLy + sqrLz, sqrLx + sqrLz, sqrLx + sqrLy)/12.0;
        #};
    };

    report          on;
    reportToFile    on;
    accelerationRelaxation 0.2;
    accelerationDamping 0.5;

    solver
    {
        type Newmark;
    }

    constraints
    {
        // fixedPoint
        // {
        //     sixDoFRigidBodyMotionConstraint point;
        //     centreOfRotation (0.5 0.45 0.1);
        // }

        fixedLine
        {
            sixDoFRigidBodyMotionConstraint line;
            // centreOfRotation (-0.07 0.012 0.005);
            direction (1 0 0);
        }

        fixedAxis
        {
            sixDoFRigidBodyMotionConstraint axis;
            axis (1 0 0);
        }
    }

    restraints
    {
        //Restraint Forces

        //Typical Restriant Force Definition
        spring
        {
            sixDoFRigidBodyMotionRestraint linearSpring;
           anchor                                (1 .2 .5);
           refAttachmentPt                       (0 .2 0.5);
           stiffness                             200;  //units of N/m
           damping                               20;   //units of Ns/m
           restLength                            1;   //units of m

        }


    }
}



// ************************************************************************* //
