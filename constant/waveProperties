seaLevel            0;

relaxationNames     ( inlet outlet );

initializationName  outlet;

inletCoeffs
{
    waveType            stokesFirst;
    Tsoft               2;
    depth               0.4;
    period              2;
    direction           ( 1 0 0 );
    phi                 0;
    height              0.1;
    waveNumber          (1.70048 0 0);
    omega               3.14159;

    relaxationZone
    {
        relaxationScheme    Spatial;
        relaxationShape     Rectangular;
        beachType           Empty;
        relaxType           INLET;
        startX              ( -4 -0.15 -1 );
        endX                ( -2 -0.15 1 );
        orientation         ( 1 0 0 );
    }
}

outletCoeffs
{
    waveType            potentialCurrent;
    U                   ( 0 0 0 );
    Tsoft               2;

    relaxationZone
    {
        relaxationScheme    Spatial;
        relaxationShape     Rectangular;
        beachType           Empty;
        relaxType           OUTLET;
        startX              ( 2 -0.15 -1 );
        endX                ( 4 -0.15 1 );
        orientation         ( 1 0 0 );
    }
